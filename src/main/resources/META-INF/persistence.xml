<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="unitName">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>jdbc:postgresql://localhost/Splitter</jta-data-source>
		<class>com.epam.model.Employee</class>
		<properties>
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
			<property name="eclipselink.ddl-generation.output-mode"
				value="database" />
			<property name="driverClassName" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/Splitter"></property>
			<property name="javax.persistence.jdbc.user" value="admin"></property>
			<property name="javax.persistence.jdbc.password" value="adminadmin"></property>
		</properties>
	</persistence-unit>
</persistence>


